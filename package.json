{
  "name": "renovate-config-untool",
  "description": "Default renovate presets for untool packages",
  "license": "MIT",
  "homepage": "https://github.com/untool/renovate-config",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com/untool/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/untool/renovate-config/issues"
  },
  "version": "1.0.0",
  "renovate-config": {
    "base": {
      "description": "Default renovate configuration for untool packages",
      "extends": [
        ":prNotPending",
        ":prHourlyLimit2",
        ":prConcurrentLimit20",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":renovatePrefix",
        ":semanticCommits",
        ":semanticPrefixFixDepsChoreOthers",
        ":updateNotScheduled",
        ":automergeDisabled",
        ":ignoreModulesAndTests",
        ":maintainLockFilesWeekly",
        ":preserveSemverRanges",
        ":widenPeerDependencies",
        "group:monorepos",
        "group:recommended",
        "helpers:disableTypesNodeMajor"
      ],
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "ignoreDeps": [
        "prettier"
      ],
      "semanticCommitScope": "{{parentDir}}",
      "packageRules": [
        {
          "paths": [
            "package.json"
          ],
          "semanticCommitScope": null
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "updateTypes": [
            "major",
            "minor"
          ],
          "rangeStrategy": "bump"
        }
      ]
    }
  }
}